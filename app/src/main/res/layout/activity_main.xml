<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/create_background_gradient"
    tools:context="com.moodbanner.dev.any.MainActivity">

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:gravity="center"
        android:textColor="#88ffffff"
        android:lineSpacingExtra="-31dp"
        android:text="Mood\nBanner"
        android:textSize="75sp"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#22ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:text="Create New"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:id="@+id/btnInstagramSquare"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#125688"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:layout_margin="10dp"
        android:text="Instagram\n(Square)"/>

    <Button
        android:id="@+id/btnInstagramPortrait"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#125688"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:layout_margin="10dp"
        android:text="Instagram\n(Portrait)"/>

    <Button
        android:id="@+id/btnInstagramLandscape"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#125688"
        android:textColor="#ffffff"
        android:textSize="9sp"
        android:layout_margin="10dp"
        android:text="Instagram\n(Landscape)"/>

</LinearLayout>


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#22ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:text="Edit Existing"/>

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#22ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:text="View Gallery"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginTop="30dp"
        android:textSize="11sp"
        android:textColor="#33ffffff"
        android:gravity="center"
        android:text="Please select one of the options above.  This is Beta software so its going to be full of bugs.  If you could bare with me on this..." />
</LinearLayout>
