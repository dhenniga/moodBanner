<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_new_container"
    android:background="@drawable/create_background_gradient"
    tools:context="com.moodbanner.dev.any.CreateNew">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/createnew_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </AbsoluteLayout>

    <include layout="@layout/activity_menubar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        >

        <AbsoluteLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tempButtons"
            android:background="#88000000"
            android:rotation="270"

            android:layout_marginLeft="-73dp"
            android:layout_marginTop="84dp">

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:progress="200"
            android:max="400"
            />

        </AbsoluteLayout>


        <LinearLayout
            android:id="@+id/tempButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/topbar"
            android:layout_margin="10dp"
            android:orientation="vertical">



            <Button
                android:id="@+id/btnMoveTextUp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textColor="@color/white_transparent_80"
                android:textSize="12dp"
                android:background="@drawable/text_input_background"
                android:text="u"/>

            <Button
                android:id="@+id/btnMoveTextDown"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white_transparent_80"
                android:background="@drawable/text_input_background"
                android:text="d"/>

            <ToggleButton
                android:id="@+id/tbtnShadow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white_transparent_80"
                android:background="@drawable/text_input_background"
                android:textOn="S"
                android:textOff="S"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txtMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="90sp"
            android:textColor="@color/white"
            android:text="This is some testing text"
            android:gravity="center"
            android:lineSpacingExtra="-30dp"
            android:hint="Enter Text"
            android:textColorHint="@color/white"
            />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewBackgrounds"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFonts"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@null"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFontColours"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            />

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:weightSum="2"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/etInput"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textSize="14sp"
            android:background="@drawable/text_input_background"
            android:layout_alignParentTop="true"
            android:hint="Enter Text"
            android:capitalize="sentences"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textColorHint="#66ffffff"
            android:textColor="@color/white"
            />

            <ToggleButton
                android:id="@+id/tbtnShowHideUI"
                android:textOn=""
                android:textOff=""
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_check"
                android:textColor="@color/white_transparent_80"
                android:textSize="12dp" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
