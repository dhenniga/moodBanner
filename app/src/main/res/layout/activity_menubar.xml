<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#22000000"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:id="@+id/menubar_container"
    tools:context="com.moodbanner.dev.moodbanner.Menubar">

    <Button
        android:id="@+id/btnFont"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#33000000"
        android:text="font"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnBackground"
        android:layout_toEndOf="@+id/btnFont"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:background="#33000000"
        android:text="Background"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnClipArt"
        android:layout_toEndOf="@+id/btnBackground"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="#33000000"
        android:text="ClipArt"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnSave"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#77000000"
        android:text="Save"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff" />

</RelativeLayout>
